SELECT 
    case when weekday(data) = 0 then loja  else '' end as 'Segunda-feira',
	case when weekday(data) = 1 then loja  else '' end as 'Ter√ßa-feira',
	case when weekday(data) = 2 then loja  else '' end as 'Quarta-feira',
	case when weekday(data) = 3 then loja   else '' end as 'Quinta-feira',
	case when weekday(data) = 4 then loja   else '' end as 'Sexta-feira',
	case when weekday(data) = 5 then loja   else '' end as 'Sabado',
	case when weekday(data) = 6 then loja   else '' end as 'Domingo'
	FROM suportenl.rotas
		WHERE YEAR(data) = YEAR(CURDATE())
		AND YEARWEEK(data, 1) = YEARWEEK(CURDATE(), 1)
		group by 1,2,3,4,5,6,7;
